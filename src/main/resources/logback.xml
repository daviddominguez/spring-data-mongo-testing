<configuration>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>
                %d{HH:mm:ss.SSS} %highlight(%-5p) %magenta([%-10thread]) %-30logger{0} | %m%n
            </Pattern>
        </encoder>
    </appender>

    <root>
        <level value="warn" />
        <appender-ref ref="console" />
    </root>

    <logger name="ch.qos.logback">
        <level value="warn" />
    </logger>

    <logger name="es.amplia">
        <level value="debug" />
    </logger>
</configuration>
